<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp">


        <EditText
            android:id="@+id/et_password_origin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_et"
            android:hint="@string/input_pwd"
            android:inputType="textPassword"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/et_password_origin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="原密码"
            android:textColor="#353535"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        
        android:id="@+id/re_password"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="13dp"
        android:layout_marginTop="10dp"
        android:paddingRight="13dp"
        android:paddingBottom="10dp">


        <EditText

            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_et"
            android:hint="纯数字 6位密码"
            android:inputType="numberPassword"
            android:paddingLeft="110dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/et_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="支付密码"
            android:textColor="#353535"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_password_confire"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="13dp"
         android:paddingRight="13dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/et_password_confire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_et"
            android:hint="纯数字 6位密码"
            android:inputType="numberPassword"
            android:paddingLeft="110dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/et_password_confire"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="确认支付密码"
            android:textColor="#353535"
            android:textSize="14sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_country"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/countries_and_regions"
            android:textColor="#353535"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/china"
            android:textColor="@color/icon_press"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_usertel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_et"
            android:hint="@string/you_mobile"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/et_usertel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/country_code"
            android:textColor="#353535"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_smscode"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/btn_code"
            android:background="@drawable/bg_et"
            android:hint="@string/Verification_Code"
            android:inputType="number"
            android:paddingLeft="110dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />
        <TextView
             android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/et_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="#353535"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/et_code"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_corner_black"
            android:gravity="center"
            android:text="@string/has_code"
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="60dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/bg_btn_green"
        android:text="确认提交"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>