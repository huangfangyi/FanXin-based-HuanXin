<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <include layout="@layout/activity_header"
        />
   <ImageView
       android:layout_below="@+id/title"
       android:id="@+id/iv_sign_bg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:adjustViewBounds="true"
       android:src="@drawable/image_sign_bg"
       />

    <TextView
        android:id="@+id/tv_lianxu"
        android:layout_below="@+id/iv_sign_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical|right"
        android:text="已签到0天"
        android:padding="13dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll_temp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_below="@+id/tv_lianxu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="7"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sign_1"
            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/iv_sign_2"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_sign_3"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_sign_4"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_sign_5"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_sign_6"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_sign_7"

            android:layout_weight="1"
            android:src="@drawable/icon_sign_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_temp2"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_below="@+id/ll_temp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="7"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周一"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周二"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周三"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周四"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周五"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周六"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周日"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"
            />



    </LinearLayout>

    <Button
        android:layout_below="@+id/ll_temp2"
        android:text="签   到"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="40dp"
        android:id="@+id/btn_sign"
        android:background="@drawable/bg_btn_red"
        />



    <LinearLayout
        android:layout_below="@+id/btn_sign"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#353535"
            android:textSize="20sp"
            android:text="签到规则"
            />
        <TextView
            android:id="@+id/tv_sign"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="16sp"
            />


    </LinearLayout>

</RelativeLayout>